<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="toolbarNavigationButtonStyle">@style/NavigationButton</item>
    </style>

    <style name="NavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ProgressCardMainTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProgressCardMainValue">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>
